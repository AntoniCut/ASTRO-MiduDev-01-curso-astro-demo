import { type APISpaceXResponse } from "@/types/api";
import CardLaunch from "./CardLaunch.astro";


const res = await fetch("https://api.spacexdata.com/v5/launches/query", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: "asc",
      },
      limit: 12,
    },
  }),
});

//const data = JSON.stringify(await res.json());        //  Para crear los tipos de TypeScript en https://app.quicktype.io/
const { docs: launches } = (await res.json()) as APISpaceXResponse;

console.log("docs => ", launches);
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  
    {
        //  -----  Forma Desestructurada  -----
        launches.map(( {id, links, details, flight_number, success}) => (
          
            <CardLaunch 
                id={id}
                img={links.patch.small}
                details={details}
                flightNumber={flight_number}
                success={success}
            />
        ))
      }


